# Database
DATABASE_URL=postgresql://user:password@localhost:5432/email_marketing_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# LiqPay (працює в Україні)
LIQPAY_PUBLIC_KEY=i00000000000
LIQPAY_PRIVATE_KEY=sandbox_XXXXXXXXXXXXXXX
LIQPAY_SANDBOX_MODE=true

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# Email Service (Resend - works globally)
RESEND_API_KEY=re_your_resend_api_key
FROM_EMAIL=noreply@yourdomain.com

# AWS (optional for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-central-1
S3_BUCKET_NAME=email-marketing-uploads

# App Settings
APP_NAME=AI Email Marketing Assistant
APP_URL=http://localhost:3000
API_URL=http://localhost:8000
ENVIRONMENT=development

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]